{
  "name": "personal-site",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "lint": "eslint --fix src/",
    "format": "prettier --log-level warn --write src/",
    "types": "tsc",
    "build": "next build",
    "dev": "next dev -p 3001",
    "dev:visual-regression": "NEXT_PUBLIC_PLAYWRIGHT=true next dev -p 3001",
